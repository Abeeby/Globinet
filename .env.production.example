# Variables d'environnement pour la production
# Copiez ce fichier en .env.production et remplissez les valeurs

# URL de votre site en production
NEXT_PUBLIC_SITE_URL=https://votre-domaine.com

# Configuration Email (choisissez une option)

# Option 1: EmailJS
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key

# Option 2: Formspree
NEXT_PUBLIC_FORMSPREE_ENDPOINT=https://formspree.io/f/your_form_id

# Option 3: Web3Forms
NEXT_PUBLIC_WEB3FORMS_KEY=your_access_key

# Option 4: PHP Endpoint
NEXT_PUBLIC_PHP_ENDPOINT=/send-email.php

# Analytics (optionnel)
NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX-X

# SEO
NEXT_PUBLIC_SITE_NAME=Globinet
